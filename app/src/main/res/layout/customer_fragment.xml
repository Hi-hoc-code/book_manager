<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:background="#FFF"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtSearchKhachHang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="38dp"
        android:background="@drawable/border_edt"
        android:drawableEnd="@drawable/search"
        android:hint="Tìm kiếm khách hàng..."
        android:paddingHorizontal="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcLisstKhachHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtSearchKhachHang"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddKhachHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvcLisstKhachHang"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/add" />
</RelativeLayout>